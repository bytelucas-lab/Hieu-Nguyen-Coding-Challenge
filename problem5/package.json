{
  "name": "curd-server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "pm2:start": "NODE_ENV=production pm2 start ./build/src/app.js -i 1 --attach | ./node_modules/.bin/bunyan",
    "pm2:stop": "pm2 stop all",
    "pm2:delete": "pm2 delete all",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts | ./node_modules/.bin/bunyan",
    "lint": "biome check src/ --write",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json"
  },
  "keywords": [],
  "author": "Lucas Nguyen",
  "license": "MIT",
  "dependencies": {
    "bunyan": "^1.8.15",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "ip": "^2.0.1",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bunyan": "^1.8.8",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.195",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.6.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  }
}
